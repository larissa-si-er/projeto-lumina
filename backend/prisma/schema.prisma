generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @map("_id")
  name       String
  email      String   @unique
  phone      String
  password   String
  endereco   Json?
  // endereco   String? 
  role       userRole @default(volunteer)
  totalHours Int
  // firebaseUid String   @unique // Este Ã© o novo campo adicionado

  @@map("users")
}

enum userRole {
  volunteer
  admin
}
